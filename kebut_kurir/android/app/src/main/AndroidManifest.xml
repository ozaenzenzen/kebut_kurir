            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAvM3K-3jWri0Zbg0AzWbfHbcmqGMgUArw"/>  
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
